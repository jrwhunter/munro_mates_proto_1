<h1>Listing climbs</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Hill number</th>
      <th>Date</th>
      <th>Comments</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @climbs.each do |climb| %>
      <tr>
        <td><%= climb.user_name %></td>
        <td><%= climb.hill_number %></td>
        <td><%= climb.date %></td>
        <td><%= climb.comments %></td>
        <td><%= link_to 'Show', climb %></td>
        <td><%= link_to 'Edit', edit_climb_path(climb) %></td>
        <td><%= link_to 'Destroy', climb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

